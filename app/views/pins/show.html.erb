<div class="row">
	<div class="span6 offset3">
		<div class="well">
			<p>
			  <%= @pin.description %>
			</p>
			<p>
			  <%= @pin.user.name %>
			</p>
			<!--
			Note how pin.user req's an @ sign here, but not
			in the partial (_pin.html.erb). A subtle thing
			Mattan doesn't cover in lecture
			-->
			<% if current_user == @pin.user %>
				<%= link_to 'Edit', edit_pin_path(@pin) %> |
			<% end %>
			<%= link_to 'Back', pins_path %>
		</div>
	</div>
</div>


